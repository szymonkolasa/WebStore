@model WebStore.Web.ViewModels.Account.EmailViewModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit email"];
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_AccountMenu")
    </div>
    <div class="col-md-9">
        <form asp-action="Email">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CurrentEmail" class="control-label"></label>
                <input asp-for="CurrentEmail" class="form-control" />
                <span asp-validation-for="CurrentEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewEmail" class="control-label"></label>
                <input asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

