@model System.String

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["My Account"];
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_AccountMenu")
    </div>
    <div class="col-md-9">
        @if (Model != null)
        {
            <div class="alert alert-success" role="alert">
                @Localizer[Model]
            </div>
        }
        
        <div class="d-flex flex-wrap">
            <div class="col-md-4 px-2 mb-4 category">
                <a asp-controller="Account" asp-action="CurrentOrders" class="nav-link pt-0">
                    <div class="text-center bg-light">
                        <div class="p-3 text-dark">
                            <h5 localize>My orders</h5>
                        </div>
                        <div class="pt-4" style="height: 200px">
                            <div class="pt-4 text-dark align-middle">
                                <span class="fa fa-3x fa-archive"></span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 px-2 mb-4 category">
                <a asp-controller="Account" asp-action="Shipping" class="nav-link pt-0">
                    <div class="text-center bg-light">
                        <div class="p-3 text-dark">
                            <h5 localize>Shipping details</h5>
                        </div>
                        <div class="pt-4" style="height: 200px">
                            <div class="pt-4 text-dark align-middle">
                                <span class="fa fa-3x fa-truck"></span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 px-2 mb-4 category">
                <a asp-controller="Account" asp-action="Email" class="nav-link pt-0">
                    <div class="text-center bg-light">
                        <div class="p-3 text-dark">
                            <h5 localize>Email address</h5>
                        </div>
                        <div class="pt-4" style="height: 200px">
                            <div class="pt-4 text-dark align-middle">
                                <span class="fa fa-3x fa-at"></span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4 px-2 mb-4 category">
                <a asp-controller="Account" asp-action="Password" class="nav-link pt-0">
                    <div class="text-center bg-light">
                        <div class="p-3 text-dark">
                            <h5 localize>Change password</h5>
                        </div>
                        <div class="pt-4" style="height: 200px">
                            <div class="pt-4 text-dark align-middle">
                                <span class="fa fa-3x fa-unlock-alt"></span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>