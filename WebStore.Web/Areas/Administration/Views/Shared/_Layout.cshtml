@using Microsoft.AspNetCore.Identity
@using WebStore.Data.Entities

@inject UserManager<ApplicationUser> UserManager

@{ 
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/admin.css" />

    <title>WebStore - @ViewData["Title"]</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a asp-area="Administration" asp-controller="Dashboard" asp-action="Index" class="navbar-brand" localize>WebStore Administration</a>
            <div class="pull-right navbar-nav">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link fa fa-lg fa-chevron-right"></a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-md-3 bd-sidebar mb-3">
                <button class="btn btn-link d-md-none p-0 ml-3 collapsed" role="button" data-toggle="collapse" href="#menu" aria-expanded="false" aria-controls="menu">
                    <span class="fa fa-lg fa-bars"></span>
                </button>
                <div id="menu" class="collapse d-md-block">
                    @await Html.PartialAsync("_AdminMenu")
                </div>
            </div>
            <div class="col-md-9">
                <div class="m-md-4 mt-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/admin.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>